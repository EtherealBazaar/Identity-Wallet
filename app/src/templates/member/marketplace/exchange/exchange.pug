.exchange-container
    md-button.gray.default.back
        span.primary(ui-sref="member.marketplace.exchange-list")  Back
    .exchange
        .exchange-content
            .header
                .logo
                    img(src='assets/images/icons/selfkey.svg', width=36)
                    span.name {{realData.name}}

            .body
                .section
                    .section-content
                        .textual
                            .text(ng-bind-html="realData.gio")
                            span(ng-if='realData.description.length > 300 && realData.description.length != strLimit')
                                    md-button.gray.default(ng-click='showMore()') Show more
                            span(ng-if='realData.description.length == strLimit')
                                md-button.gray.default(ng-click='showLess()') Show less

                .section
                    .section-content
                        .title Exchange Highlights
                        .columns
                            .column
                                div
                                    label
                                        span Location:
                                    strong Honng Kong

                                div
                                    label
                                        span Year Launched:
                                    strong {{realData['year_launched']}}

                                div
                                    label
                                        span Coin Pairs:
                                    strong(ng-repeat="i in realData['Currency Pairs']") {{i}}

                                div
                                    label
                                        span Maker Fee:
                                    strong 2.0%

                                div
                                    label
                                        span Taker Fee:
                                    strong 1.5%


                                div
                                    label
                                        span Url:
                                    strong www.getecoin.com


                            .column
                                div
                                    label
                                        span Fiat Payments:
                                    strong Bank Transfer, Paypal

                                div
                                    label
                                        span Fiat Supported:
                                    strong HKD, EUR, USD

                                div
                                    label
                                        span Margin Trading:
                                    strong No

                                div
                                    label
                                        span KYC/AML:
                                    strong Yes

                                div
                                    label
                                        span Excluded residents:
                                    strong USA

                                div
                                    label
                                        span Contact Support:
                                    strong www.support@getecoin.com

                .section
                    .section-content
                        .title KYC Requirements
                        .columns
                            .column
                                div
                                    label
                                        span icon
                                    strong First Name

                                div
                                    label
                                        span icon:
                                    strong Last Name

                                div
                                    label
                                        span icon
                                    strong country of residence

                            .column
                                div
                                    label
                                        span icon
                                    strong National ID

                                div
                                    label
                                        span icon
                                    strong National ID Selfie





