md-dialog(aria-label="Choose directory to store documents", style="min-width: 60%;")
    md-dialog-content
        .kyc-dialog-container(layout="column")
            .header(layout="row", layout-align="center center")
                .title Choose directory to store documents
            .body.md-padding(style="max-height: 300px;", layout="column", layout-align="center center")
                div(layout="row", layout-align="center center", ng-if="currentDirectory")
                    span {{currentDirectory}}
                    .kyc-link(layout="row", layout-align="center center", ng-click="chooseDirectory($event)")
                        i.material-icons(style="font-size: 19px;") edit

                .kyc-button.primary(style="margin-right: 8px;", ng-click="chooseDirectory($event)", ng-if="!currentDirectory") Choose Directory

            .actions(layout="row", layout-align="center center")
                .kyc-button.primary(style="margin-right: 8px;", ng-click="save($event)") Save
                .kyc-button.primary(style="margin-left: 8px;", ng-click="cancel($event)", ng-if="showCancelButton") Cancel
