.dashboard-layout__content-wrappper(layout="column", layout-align="start center")

    // header
    .dashboard-layout__content-header-section(layout="row", layout-align="start center")
        h2.proxima.white SelfKey Dashboard

    // balances
    .dashboard-layout__content-section(layout="row", layout-align="center center")
        sk-token-box(name="Ethereum", symbol="eth", value="{{$root.ethBalance}}", value-in-usd="${{$root.ethUsdBalance}} USD", address="{{$root.wallet.getAddress()}}")
        sk-token-box(name="Unknown", symbol="unk", value="852.62781", value-in-usd="$44951.44 USD", address="3CCCXfH874ronv1uGKkCMDgW2ffLBQScro")
        sk-tasks-box(date="December 2017", completed="12", outstanding="23", upcoming="7")

    // my crypto
    .dashboard-layout__content-section(layout="row", layout-align="center center")
        .sk-box.my-cryptos-box(style="width: 100%; height: 422px; padding: 20px;")
            .my-cryptos-box__header(layout="row")
                span(flex, style="font-family: ProximaNovaRegular; font-size: 20px; line-height: 1.8; color: #ffffff;") My Crypto
                button.sk-icon-button
                    sk-icon(icon="plus", size-class="icon-size-26x26")
            .sk-horizontal-devider(style="margin-top: 20px;")
            h2.proxima.white In Progress - Waiting for Tato

    // alerts
    .dashboard-layout__content-section(layout="row", layout-align="center center")
        .sk-box.alerts-box(style="width: 100%; padding: 20px; display: inline-flex; flex-direction: column;")
            .alerts-box__header
                span(flex, style="font-family: ProximaNovaRegular; font-size: 20px; line-height: 1.8; color: #ffffff;") Alerts
            .sk-horizontal-devider(style="margin-top: 20px;")
            .alerts-box__item(layout="row", layout-align="start center", style="margin-top: 20px;")
                button.sk-icon-button
                    sk-icon(icon="warning", size-class="icon-size-33x36")
                span.alerts-box__warning-text(style="font-family: ProximaNovaRegular; font-size: 18px; font-weight: 500; color: #ff6c00; margin-left: 16px;") Action Required  Zilliqa Token Sale:
                span.alerts-box__text(style="font-family: ProximaNovaRegular; font-size: 18px; color: #ffffff; margin-left: 16px;") Proof of Address Required!
                span.alerts-box__date(style="font-family: ProximaNovaRegular; font-size: 14px; color: #93b0c1; margin-left: 16px;") 11/24/2017
            .sk-horizontal-devider(style="margin-top: 20px;")
            .alerts-box__item(layout="row", layout-align="start center", style="margin-top: 20px;")
                button.sk-icon-button
                    sk-icon(icon="notification", size-class="icon-size-33x36")
                span.alerts-box__warning-text(style="font-family: ProximaNovaRegular; font-size: 18px; font-weight: 500; color: #43c4a7; margin-left: 16px;") Subscribed to Zilliqa Notifications:
                span.alerts-box__text(style="font-family: ProximaNovaRegular; font-size: 18px; color: #ffffff; margin-left: 16px;") Proof of Address Required!
                span.alerts-box__date(style="font-family: ProximaNovaRegular; font-size: 14px; color: #93b0c1; margin-left: 16px;") 11/24/2017

    // reminders
    .dashboard-layout__content-section(layout="row", layout-align="center center")
        .sk-box.reminders-box(style="width: 100%; padding: 20px; display: inline-flex; flex-direction: column;")
            .reminders-box__header
                span(flex, style="font-family: ProximaNovaRegular; font-size: 20px; line-height: 1.8; color: #ffffff;") Reminders
            .sk-horizontal-devider(style="margin-top: 20px;")
            .reminders-box__item(layout="row", layout-align="start center", style="margin-top: 20px;")
                button.sk-icon-button
                    sk-icon(icon="reminder", size-class="icon-size-33x36")
                span.reminders-box__warning-text(style="font-family: ProximaNovaRegular; font-size: 18px; font-weight: 500; color: #00adc6; margin-left: 16px;") Zilliqa Sale Starts Tomorrow
                span.reminders-box__date(style="font-family: ProximaNovaRegular; font-size: 14px; color: #93b0c1; margin-left: 16px;") 11/24/2017

    // transactions
    .dashboard-layout__content-section(layout="row", layout-align="center center")
        .sk-box.transactions-box(style="width: 100%; padding: 20px; display: inline-flex; flex-direction: column;")
