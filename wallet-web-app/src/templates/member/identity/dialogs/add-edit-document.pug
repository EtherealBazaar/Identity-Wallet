md-dialog(aria-label="Add edit document", style="min-width: 60%;")
    md-dialog-content
        .kyc-dialog-container(layout="column")
            .header(layout="row", layout-align="center center")
                .title {{document.id ? 'Edit Document': 'Add document'}}
            .body.md-padding(style="max-height: 300px;", layout="column", layout-align="center center")
                form.full-width(name="documentForm", layout="column")
                    md-input-container
                        label Type
                        md-select(name="type", ng-model="document.type")
                            md-option(ng-value="'Passport'") Passport
                            md-option(ng-value="'ID Card'") ID Card
                            
                    md-input-container
                        label Name
                        input(name="name", ng-model="document.name")
                    
                    md-switch(name="privacy", ng-model="document.privacy", aria-label="Privacy") {{document.privacy ? 'Private' : 'Public'}}

                    md-checkbox(name="isDefault", ng-model="document.isDefault", aria-label="Is default") Is Default
                    
                    div(layout="row", layout-align="center center", ng-if="filePath")
                        span {{filePath}}
                        .kyc-link(layout="row", layout-align="center center", ng-click="chooseFile($event)")
                            i.material-icons(style="font-size: 19px;") edit

                    .kyc-button.primary(style="margin-right: 8px;", ng-click="chooseFile($event)", ng-if="!filePath") Choose File

            .actions(layout="row", layout-align="center center")
                .kyc-button.primary(style="margin-right: 8px;", ng-click="save($event)") Save
                .kyc-button.primary(style="margin-left: 8px;", ng-click="cancel($event)") Cancel
