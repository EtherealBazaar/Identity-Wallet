md-dialog(md-theme="default", aria-label="Add edit contact info", style="min-width: 60%;")
    md-dialog-content
        .kyc-dialog-container(layout="column")
            .header(layout="row", layout-align="center center")
                .title {{contactInfo.id ? 'Edit Contact': 'Create new contact'}}
            .body.md-padding(style="max-height: 300px;", layout="column", layout-align="center center")
                form.full-width(name="contactForm", layout="column")
                    md-input-container
                        label Type
                        md-select(name="type", ng-model="contactInfo.type")
                            md-option(ng-value="'Phone'") Phone
                            md-option(ng-value="'Email'") Email
                    md-input-container
                        label Value
                        input(name="value", ng-model="contactInfo.value")
                    
                    md-switch(name="privacy", ng-model="contactInfo.privacy", aria-label="Privacy") {{contactInfo.privacy ? 'Private' : 'Public'}}

                    md-checkbox(name="isDefault", ng-model="contactInfo.isDefault", aria-label="Is default") Is Default
                    
            .actions(layout="row", layout-align="center center")
                .kyc-button.primary(style="margin-right: 8px;", ng-click="save($event)") Save
                .kyc-button.primary(style="margin-left: 8px;", ng-click="cancel($event)") Cancel
