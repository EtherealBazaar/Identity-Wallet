h1.uppercase.color-primary Identity Settings
h3.uppercase.color-primary contact info

.kyc-box.md-whiteframe-3dp.margin-top-3(ng-repeat="item in contactItems")
    .section-vertical
        .item
            .header.text-align-center {{item.type}}
            .value.text-align-center {{item.value}}
        
    .section-horizontal
        .item
            .header Status
            .value
                .kyc-status-box.blue.cursor-pointer(ng-if="item.status === 'verify'") verify
                .kyc-status-box.white(ng-if="item.status === 'verified'") verified
        .item
            .header Privacy
            .value
                .kyc-status-box.green.no-borders(ng-if="item.privacy === 'public'") public
                .kyc-status-box.red.no-borders(ng-if="item.privacy === 'private'") private
    .section-horizontal
        .item
            .value(style="background-color: #F0EEEF;")
                .kyc-link(layout="row", layout-align="center center")
                    i.material-icons mode_edit
                    span.margin-left-1 edit
        .item
            .value(style="background-color: #F0EEEF;")
                .kyc-link(layout="row", layout-align="center center")
                    i.material-icons delete

.kyc-button.primary.margin-top-3(layout="row", layout-align="center center") 
    span.margin-right-2 Add Contact Info
    i.material-icons add_circle
