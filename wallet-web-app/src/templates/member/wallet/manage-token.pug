.wallet-manage-token-wrappper(layout="column", layout-align="start center")
    .header-content
        .logo-section(layout="row")
            sk-icon(icon="{{symbol}}", size-class="icon-size-44x44", style="padding-top:4px")
            .logo-text
                span(style="font-size:16px") {{name}}
                span.initial {{symbol}}
        .price-section
            span.main-price {{balance}}
            span.secondary-price {{balanceUsd}} USD
        hr
        .coin-address-section
            span.your-address Your {{name}} Address:
            .generated-address(layout="row")
                .address {{publicKeyHex}}
                button.copy-button COPY
        hr
        .buttons-section(layout="row")
            button.action-button(layout="row", ng-click="$root.openReceiveTokenDialog($event, {symbol: symbol, publicKeyHex: publicKeyHex})")
                sk-icon(icon="coins", size-class="icon-size-16x16", style="padding-top:2px")
                span RECEIVE
            button.action-button(layout="row", style="margin-left:20px", ng-click="$root.openSendTokenDialog($event, symbol)")
                sk-icon(icon="sent", size-class="icon-size-16x16", style="padding-top:2px")
                span SEND
